<h3>All our Flats (<%= Flat.count %>) </h3>

<div class="container">
<%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary btn-lg" %>

<div style="margin-top: 10px">
  <form action="/flats" method="get">
    <div class="input-group">
      <input
        type="text"
        name="searchflat"
        value="<%= params[:searchflat] %>"
        class="form-control">
      <input type="submit" value="Search" class="btn btn-primary">
    </div>
  </form>
</div>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-sm-3 m-3">
      <div class="card">
        <div class="card-body">
          <%= render flat %>
           <%= link_to "More info" , flat_path(flat), class: "btn btn-primary btn-sm" %> </a>
           <%= link_to "Edit" , edit_flat_path(flat), class: "btn btn-danger btn-sm"%>
           <%= link_to "Delete" , flat_path(flat), class: "btn btn-secondary btn-sm", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
